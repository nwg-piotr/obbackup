# Maintainer: Piotr Miller <nwg.piotr@gmail.com>
pkgname=('obbackup')
pkgver=0.0.1
pkgrel=1
pkgdesc="Graphical tool to backup/restore Openbox config in few clicks"
arch=('i686' 'x86_64')
url="https://github.com/nwg-piotr/obbackup"
license=('GPL3')
depends=('python3')
source=("https://github.com/nwg-piotr/obbackup/raw/master/dist/obbackup-0.0.1.tar.gz"
"https://github.com/nwg-piotr/obbackup/blob/master/dist/obbackup"
"https://github.com/nwg-piotr/obbackup/blob/master/dist/obbackup.desktop"
"https://github.com/nwg-piotr/obbackup/blob/master/dist/obbackup.desktop")

md5sums=('062737633adadb5c1f22e53603f12730'
         'af54e54383a7bdb5fa13ffa1c023f831'
         '8c44865338673c7a9ff646d23af1b172'
         '15b45413c215260baf7c462cbbdde183')

package() {
  install -D -m 755 obbackup \
 	 "$pkgdir"/usr/bin/obbackup
 	install -D -m 755 obbackup.desktop \
 	 "$pkgdir"/usr/share/applications/obbackup.desktop
 	install -D -m 644 obbackup.svg \
 	 "$pkgdir"/usr/share/obbackup/obbackup.svg.png
  cd "$srcdir/$pkgname-$pkgver"
  python setup.py install --root="$pkgdir/" --optimize=1
}

